<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/text_thread_title"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lorem ipsum dolor"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/dobro_secondary_text"
            android:background="@color/dobro_dark"/>

    <include layout="@layout/card_post"/>
    <ListView android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:id="@+id/list_preview_posts"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
              android:visibility="gone"
              android:descendantFocusability="afterDescendants"
            />
</LinearLayout>