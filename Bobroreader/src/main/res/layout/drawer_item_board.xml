<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:lines="1"
                      android:layout_alignParentEnd="true"
                      android:layout_alignParentStart="true"
                      android:layout_marginEnd="36dp"
                      android:orientation="horizontal">
            <ImageView android:id="@+id/material_drawer_icon"
                       android:layout_width="150dp"
                       android:layout_height="50dp"
                       android:src="@drawable/banners_a_125761210590870"/>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="match_parent"
                          android:gravity="center_vertical"
                          android:orientation="vertical">
                <TextView
                        android:id="@+id/material_drawer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:lines="1"
                        android:singleLine="true"
                        android:textDirection="anyRtl"
                        android:textSize="24sp"
                        tools:text="/board/"/>
                <TextView
                        android:id="@+id/material_drawer_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:lines="1"
                        android:singleLine="true"
                        android:textDirection="anyRtl"
                        android:textSize="@dimen/material_drawer_item_primary_description"
                        tools:text="Desc"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/material_drawer_badge_container"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                >
            <TextView
                    android:id="@+id/material_drawer_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:lines="1"
                    android:minWidth="20dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:singleLine="true"
                    android:textSize="@dimen/material_drawer_item_primary_text"
                    tools:text="[99]"/>
        </LinearLayout>
    </RelativeLayout>
    <View
            android:id="@+id/drawer_subdivider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="55dp"
            android:layout_marginStart="55dp"
            android:background="#14000000"/>
</RelativeLayout>