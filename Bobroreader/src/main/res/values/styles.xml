<resources>
    <!-- Base application theme. -->
  <style name="Bobroreader.Theme.Default" parent="MaterialTheme.Light">

    <!-- Here we setting appcompat’s actionBarStyle -->
    <item name="drawerArrowStyle">@style/Bobroreader.Drawer</item>

    <!-- ...and here we setting appcompat’s color theming attrs -->
    <item name="colorPrimary">@color/dobro_dark</item>
    <item name="colorPrimaryDark">@color/dobro_primary_text</item>
      <item name="colorAccent">@color/dobro_secondary_text</item>

    <!-- MaterialDrawer specific values -->
    <item name="material_drawer_background">@color/dobro_medium</item>
    <item name="material_drawer_primary_text">@color/dobro_primary_text</item>
    <item name="material_drawer_primary_icon">@color/dobro_primary_text</item>
    <item name="material_drawer_secondary_text">@color/dobro_secondary_text</item>
    <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
    <item name="material_drawer_hint_icon">@color/material_drawer_hint_icon</item>
    <item name="material_drawer_divider">@color/material_drawer_divider</item>
    <item name="material_drawer_selected">@color/dobro_light</item>
    <item name="material_drawer_selected_text">@color/dobro_secondary_text</item>
    <!--<item name="material_drawer_selected_text">@color/dobro_name</item>-->
    <item name="material_drawer_header_selection_text">@android:color/black</item>
      <item name="android:windowTranslucentNavigation">true</item>

      <item name="android:windowTranslucentStatus">true</item>
      <item name="android:windowBackground">@color/dobro_light</item>

  </style>


    <style name="Bobroreader.Drawer" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@color/dobro_primary_text</item>
  </style>

</resources>
